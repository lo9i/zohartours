{% extends "::base.html.twig" %}

{% block title %}{{ brand }} | {{ 'login.title'|trans }}{% endblock %}

{% block inline_body %}class="page-login-v3 layout-full"{% endblock %}

{% block body %}
  <div class="page animsition vertical-align text-center" data-animsition-in="fade-in" data-animsition-out="fade-out">
    <div class="page-content vertical-align-middle">
      <div class="panel">
        <div class="panel-body">
          <div class="brand">
            <h2 class="brand-text font-size-32">{{ brand }}</h2>
          </div>
          <form method="post" action="{{ path('fos_user_security_check') }}">
            
            {# {{ dump(_target_path) }} #}

            <input type="hidden" name="_csrf_token" value="{{ csrf_token }}" />
            {% if error %}
              <div class="form-group clearfix">
                <div class="alert alert-icon alert-danger" role="alert">
                  <i class="icon wb-bell" aria-hidden="true"></i>
                  {{ error.messageKey|trans(error.messageData, 'security') }}  
                </div>
              </div>
            {% endif %}
            <div class="form-group form-material floating">
              <input type="text" class="form-control" name="_username" placeholder="{{ 'login.username'|trans }}" value="{{ last_username }}" />
              <label class="floating-label">{{ 'login.username'|trans }}</label>
            </div>
            <div class="form-group form-material floating">
              <input type="password" name="_password" class="form-control" placeholder="{{ 'login.password'|trans }}" />
              <label class="floating-label">{{ 'login.password'|trans }}</label>
            </div>
            <div class="form-group clearfix">
              <div class="checkbox-custom checkbox-inline checkbox-primary checkbox-lg pull-left">
                <input type="checkbox" id="inputCheckbox" name="_remember_me">
                <label for="inputCheckbox">{{ 'login.rememberMe'|trans }}</label>
              </div>
              <a class="pull-right" href="{{ path('fos_user_resetting_request') }}">{{ 'login.forgotPassword'|trans }}</a>
            </div>

            <button type="submit" class="btn btn-primary btn-block btn-lg margin-top-40">{{ 'login.signIn'|trans }}</button>
          </form>
        </div>
      </div>
      <footer class="page-copyright page-copyright-inverse">
        <p>{{ brand }} Â© {{ "now"|date('Y') }}. <a href="http://bookarg.com" target="_blank">BookARG</a> {{ 'app.developedBy'|trans|lower }} Trescraneos.</p>
      </footer>
    </div>
{% endblock %}