{% extends "::base.html.twig" %}

{% block title %}{{ brand }} | {{ 'reset.title'|trans }} {% endblock %}

{% block inline_body %}class="page-login-v3 layout-full"{% endblock %}

{% block body %}
  <div class="page animsition vertical-align text-center" data-animsition-in="fade-in" data-animsition-out="fade-out">
    <div class="page-content vertical-align-middle">
      <div class="panel">
        <div class="panel-body">
          <div class="brand">
            <h2 class="brand-text font-size-32">{{ brand }}</h2>
          </div>
          
          {{ form_start(form, { 'attr': {'novalidate': 'novalidate'} }) }}

            {{ form_errors(form) }}
            
            <div class="form-group form-material floating">
              {{ form_widget(form.plainPassword.first, { 'attr': {'class': 'form-control', 'placeholder': 'reset.password'|trans } }) }}
              <label class="floating-label">{{ 'reset.password'|trans }}</label>
            </div>

            <div class="form-group form-material floating">
              {{ form_widget(form.plainPassword.second, { 'attr': {'class': 'form-control', 'placeholder': 'reset.repeat'|trans } }) }}
              <label class="floating-label">{{ 'reset.repeat'|trans }}</label>
            </div>
          
            <button type="submit" class="btn btn-primary btn-block btn-lg margin-top-40">{{ 'reset.changePassword'|trans }}</button>
          {{ form_end(form) }}
        </div>
      </div>
      <footer class="page-copyright page-copyright-inverse">
        <p>{{ brand }} Â© {{ "now"|date('Y') }}. <a href="http://bookarg.com" target="_blank">BookARG</a> {{ 'app.developedBy'|trans|lower }} <Trescraneos.</p>
      </footer>
    </div>
{% endblock %}
