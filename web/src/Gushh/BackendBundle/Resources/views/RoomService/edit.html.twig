{% extends "GushhBackendBundle::base.html.twig" %}

{% block styles %}
  <link rel="stylesheet" href="{{ asset('backend/global/vendor/formvalidation/formValidation.min.css') }}">  
{% endblock %}

{% block content %}

  <div class="page animsition">
    <div class="page-content">
      <div class="page-header page-header-bordered">
        <h1 class="page-title">Hotels</h1>
        <ol class="breadcrumb">
          <li><a href="{{ path('dashboard') }}">Backend</a></li>
          <li><a href="{{ path('backend_hotels') }}">Hotels</a></li>
          <li><a href="{{ path('backend_hotel_show', {'hid': entity.room.hotel.id } ) }}">{{ entity.room.hotel }}</a></li>
          <li><a href="{{ path('backend_room_show', {'hid': entity.room.hotel.id, 'rid': entity.room.id, 'tab': 'rooms' } ) }}">Rooms</a></li>
          <li><a href="{{ path('backend_room_show', {'hid': entity.room.hotel.id, 'rid': entity.room.id } ) }}">{{ entity.room }}</a></li>
          <li><a href="{{ path('backend_room_show', {'hid': entity.room.hotel.id, 'rid': entity.room.id, 'tab': 'services' } ) }}">Services</a></li>
          <li><a href="{{ path('backend_room_show', {'hid': entity.room.hotel.id, 'rid': entity.room.id, 'tab': 'services' } ) }}">{{ entity }}</a></li>
          <li class="active">Edit</li>
        </ol>
        <div class="page-header-actions">
          <a href="{{ path('backend_room_show', { 'hid': entity.room.hotel.id, 'rid': entity.room.id, 'tab': 'services' }) }}" class="btn btn-default">
            <i class="icon fa-chevron-left" aria-hidden="true"></i> Back
          </a>     
          <a href="#" class="btn btn-danger" data-target="#deleteForm" data-toggle="modal">
            <i class="icon fa-trash" aria-hidden="true"></i> Delete
          </a>      
        </div>
      </div>
      
      <!-- Panel Table Individual column searching -->
      <div class="panel">
        {# <header class="panel-heading">
          <h3 class="panel-title">No se </h3>
        </header> #}
        <div class="panel-body container-fluid">
          <div class="row">
            <div class="col-sm-12">
              <!-- Form -->
              {{ form_start(form) }}
                <h4 class="text-center">Basic Service Information</h4>
                <div class="row">
                  <div class="form-group col-sm-4">
                    <label class="control-label">Name</label>
                    {{ form_widget(form.name) }}
                  </div>
                  <div class="form-group col-sm-4">
                    <label class="control-label">Service Type</label>
                    {{ form_widget(form.serviceType) }}
                  </div>
                  <div class="form-group col-sm-4">
                    <label class="control-label">Service Pay Type</label>
                    {{ form_widget(form.servicePayType) }}
                  </div>
                </div>
                <div class="form-group">
                  <label class="control-label">Description</label>
                  {{ form_widget(form.description) }}
                </div>
                <div class="row">
                  <div class="form-group col-sm-3">
                    <label class="control-label">Price</label>
                    {{ form_widget(form.price) }}
                  </div>
                  <div class="form-group col-sm-3">
                    <label class="control-label">Tax</label>
                    {{ form_widget(form.tax) }}
                  </div>
                  <div class="form-group col-sm-3">
                    <label class="control-label">Profit Type</label>
                    {{ form_widget(form.profitType) }}
                  </div>
                  <div class="form-group col-sm-3">
                    <label class="control-label">Profit</label>
                    {{ form_widget(form.profit) }}
                  </div>
                </div>

                <div class="form-group text-center">
                  <a href="{{ path('backend_room_show', { 'hid': entity.room.hotel.id, 'rid': entity.room.id, 'tab': 'services' }) }}" class="btn btn-outline btn-default">Cancel</a>
                  <button type="submit" class="btn btn-success" id="saveRoomService">Save Service</button>
                </div>
                
                {{ form_rest(form) }}

              {{ form_end(form) }}
              <!-- End Form -->
            </div>
          </div>
        </div>        
      </div>
      <!-- End Panel Table Individual column searching -->
    </div>
  </div>
  
  <!-- Modal -->
  {{ include('GushhBackendBundle::Modals/deleteServiceModal.html.twig', { 'deleteForm': deleteForm, 'entity': entity }) }}
  <!-- End Modal -->
{% endblock %}

{% block footer_js %}
  <script src="{{ asset('backend/global/vendor/formvalidation/formValidation.min.js') }}"></script>
  <script src="{{ asset('backend/global/vendor/formvalidation/framework/bootstrap.min.js') }}"></script>
  <script src="{{ asset('backend/js/pages/room-service/formValidation.min.js') }}"></script>
{% endblock %}