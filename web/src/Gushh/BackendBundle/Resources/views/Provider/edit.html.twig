{% extends "GushhBackendBundle::base.html.twig" %}

  
{% block styles %}
  <link rel="stylesheet" href="{{ asset('backend/global/vendor/formvalidation/formValidation.min.css') }}">  
{% endblock %}

{% block content %}

  <div class="page animsition">
    <div class="page-content">
      <div class="page-header page-header-bordered">
        <h1 class="page-title">Providers</h1>
        <ol class="breadcrumb">
          <li><a href="{{ path('dashboard') }}">Backend</a></li>
          <li><a href="{{ path('backend_providers') }}">Providers</a></li>
          <li><a href="{{ path('backend_providers') }}">{{ entity.id }}</a></li>
          <li class="active">Edit</li>
        </ol>
        <div class="page-header-actions">
          <a href="{{ path('backend_providers') }}" class="btn btn-default">
            <i class="icon fa-chevron-left" aria-hidden="true"></i> Back
          </a>
          <a href="#" class="btn btn-danger" data-target="#deleteForm" data-toggle="modal">
            <i class="icon fa-trash" aria-hidden="true"></i> Delete
          </a>
        </div>
      </div>

        <!-- Panel Table Individual column searching -->
        <!-- Form -->
        {{ form_start(form) }}
        <div class="panel">
            <div class="panel-body container-fluid">
                <div class="row">
                    <div class="col-sm-12">
                        <h4 class="text-center">Provider Information</h4>
                        <div class="row">
                            <div class="form-group col-sm-4">
                                <label class="control-label">Name</label>
                                {{ form_widget(form.name) }}
                            </div>
                        </div>
                        <div class="row">
                            <div class="form-group col-sm-12">
                                <label class="control-label">Notes</label>
                                {{ form_widget(form.notes, { 'attr': { 'autocomplete' : 'off'} } ) }}
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="panel">
            <div class="panel-body">
                <div class="form-group text-center">
                    <a href="{{ path('backend_providers') }}" class="btn btn-outline btn-default">Cancel</a>
                    <button type="submit" class="btn btn-success" id="saveInvoice">Save Provider</button>
                </div>
            </div>
        </div>
        {{ form_rest(form) }}

        {{ form_end(form) }}
        <!-- End Form -->
    </div>
  </div>

{% endblock %}

{% block footer_js %}
    <script src="{{ asset('backend/global/vendor/formvalidation/formValidation.min.js') }}"></script>
    <script src="{{ asset('backend/global/vendor/formvalidation/framework/bootstrap.min.js') }}"></script>
{% endblock %}