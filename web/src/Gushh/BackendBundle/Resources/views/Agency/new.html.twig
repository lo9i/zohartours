{% extends "GushhBackendBundle::base.html.twig" %}

{% block inline_body %}onload="initialize()"{% endblock %}

{% block styles %}
  <link rel="stylesheet" href="{{ asset('backend/global/vendor/formvalidation/formValidation.min.css') }}">  
{% endblock %}

{% block content %}

  <div class="page animsition">
    <div class="page-content">
      <div class="page-header page-header-bordered">
        <h1 class="page-title">Agencies</h1>
        <ol class="breadcrumb">
          <li><a href="{{ path('dashboard') }}">Backend</a></li>
          <li><a href="{{ path('backend_agencies') }}">Agencies</a></li>
          <li class="active">New</li>
        </ol>
        <div class="page-header-actions">
          <a href="{{ path('backend_agencies') }}" class="btn btn-default">
            <i class="icon fa-chevron-left" aria-hidden="true"></i> Back
          </a>          
        </div>
      </div>
      
      <!-- Panel Table Individual column searching -->
      <div class="panel">
        {# <header class="panel-heading">
          <h3 class="panel-title">No se </h3>
        </header> #}
        <div class="panel-body container-fluid">
          <div class="row">
            <div class="col-sm-12">
              <!-- Form -->
              {{ form_start(form) }}
                <h4 class="text-center">Basic Agency Information</h4>
                <div class="row">
                  <div class="form-group col-sm-6">
                    <label class="control-label">Name</label>
                    {{ form_widget(form.name) }}
                  </div>
                  <div class="form-group col-sm-6">
                    <label class="control-label">Address</label>
                    {{ form_widget(form.address, { 'attr': { 'autocomplete' : 'off'} }) }}
                  </div>
                </div>
              <div class="row">
                <div class="form-group col-sm-3">
                  <label class="control-label">{{ 'backend.form.city'|trans|title }}</label>
                    {{ form_widget(form.city, { 'id': 'locality' } ) }}
                </div>
                <div class="form-group col-sm-3">
                  <label class="control-label">{{ 'backend.form.state'|trans|title }}</label>
                    {{ form_widget(form.state, { 'id': 'administrative_area_level_1' } ) }}
                </div>
                <div class="form-group col-sm-3">
                  <label class="control-label">{{ 'backend.form.zipCode'|trans|title }}</label>
                    {{ form_widget(form.zipCode, { 'id': 'postal_code' } ) }}
                </div>
                <div class="form-group col-sm-3">
                  <label class="control-label">{{ 'backend.form.country'|trans|title }}</label>
                    {{ form_widget(form.country, { 'id': 'country' } ) }}
                </div>
              </div>

              <div class="row">
                  <div class="form-group col-sm-3">
                    <label class="control-label">Website</label>
                    {{ form_widget(form.website) }}
                  </div>
                  <div class="form-group col-sm-3">
                    <label class="control-label">Phone</label>
                    {{ form_widget(form.phone) }}
                  </div>
                  <div class="form-group col-sm-3">
                    <label class="control-label">Fax</label>
                    {{ form_widget(form.fax) }}
                  </div>
                  <div class="form-group col-sm-3">
                    <label class="control-label">Commission</label>
                    {{ form_widget(form.commission) }}
                  </div>
                </div>
              <h4 class="text-center">Financial Agency Information</h4>
                <div class="row">
                  <div class="form-group col-sm-3">
                    <label class="control-label">Taxpayer Id</label>
                      {{ form_widget(form.taxpayerId) }}
                  </div>
                  <div class="form-group col-sm-9">
                  </div>
              </div>

            <div class="form-group text-center">
                  <a href="{{ path('backend_agencies') }}" class="btn btn-outline btn-default">Cancel</a>
                  <button type="submit" class="btn btn-success" id="saveAgency">Save Agency</button>
                </div>
                
                {{ form_rest(form) }}

              {{ form_end(form) }}
              <!-- End Form -->
            </div>
          </div>
        </div>        
      </div>
      <!-- End Panel Table Individual column searching -->
    </div>
  </div>

{% endblock %}

{% block footer_js %}
  <script src="https://maps.googleapis.com/maps/api/js?v=3.exp&signed_in=true&libraries=places"></script>
  <script src="{{ asset('backend/global/vendor/formvalidation/formValidation.min.js') }}"></script>
  <script src="{{ asset('backend/global/vendor/formvalidation/framework/bootstrap.min.js') }}"></script>
  <script src="{{ asset('backend/js/pages/agency/formValidation.min.js') }}"></script>
{% endblock %}