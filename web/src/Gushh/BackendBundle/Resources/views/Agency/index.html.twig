{% extends "GushhBackendBundle::base.html.twig" %}

{% block styles %}
  <link rel="stylesheet" href="{{ asset('backend/global/vendor/datatables-bootstrap/dataTables.bootstrap.min.css') }}">
  <link rel="stylesheet" href="{{ asset('backend/global/vendor/datatables-fixedheader/dataTables.fixedHeader.min.css') }}">
  <link rel="stylesheet" href="{{ asset('backend/global/vendor/datatables-responsive/dataTables.responsive.min.css') }}">
{% endblock %}

{% block content %}

  <div class="page animsition">
    <div class="page-content">
      <div class="page-header page-header-bordered">
        <h1 class="page-title">{{ 'backend.agencies.title'|trans }}</h1>
        <ol class="breadcrumb">
          <li><a href="{{ path('dashboard') }}">{{ 'backend.dashboard.title'|trans }}</a></li>
          <li class="active">{{ 'backend.agencies.title'|trans }}</li>
        </ol>
        <div class="page-header-actions">
          <a href="{{ path('backend_agency_new') }}" class="btn btn-primary">
            <i class="icon fa-plus" aria-hidden="true"></i>  {{ 'backend.agencies.singular'|trans }}
          </a>          
        </div>
      </div>
      
      <!-- Panel Table Individual column searching -->
      <div class="panel">
        <div class="panel-body">
          <table class="table table-hover dataTable table-striped width-full" id="agencyTable">
            <thead>
              <tr>
                <th>{{ 'backend.form.name'|trans }}</th>
                <th>{{ 'backend.form.commission'|trans }}</th>
                <th>{{ 'backend.form.web'|trans }}</th>
                <th>{{ 'backend.form.phone'|trans }}</th>
                <th>{{ 'backend.form.fax'|trans }}</th>
                <th>{{ 'backend.form.operators'|trans }}</th>
              </tr>
            </thead>
            <tbody>
              {% for entity in entities %}
                <tr>
                  <td><a href="{{ path('backend_agency_edit', { 'id': entity.id }) }}">{{ entity.name }}</a></td>
                  <td>{{ entity.commission }} %</td>
                  <td><a href="{{ entity.website }}" target="_blank">{{ entity.website }}</a></td>
                  <td>{{ entity.phone }}</td>
                  <td>{{ entity.fax }}</td>
                  <td>{{ entity.users|length }}</td>
                </tr>
              {% endfor %}
            </tbody>
          </table>
        </div>        
      </div>
      <!-- End Panel Table Individual column searching -->
    </div>
  </div>

{% endblock %}

{% block footer_js %}
  <script src="{{ asset('backend/global/vendor/datatables/jquery.dataTables.min.js') }}"></script>
  <script src="{{ asset('backend/global/vendor/datatables-bootstrap/dataTables.bootstrap.min.js') }}"></script>
  <script src="{{ asset('backend/global/js/components/datatables.min.js') }}"></script>
  <script src="{{ asset('backend/js/pages/agency/dataTable.min.js') }}"></script>
{% endblock %}