<div class="row">

    <div class="col-lg-12">
        <section class="SearchForm">
            {{ form_start(searchForm) }}
            <div class="row">
                <div class="col-lg-4">
                    <div class="form-group">
                        <label for="" class="SearchForm-label">{{ 'hotels.searchForm.destination'|trans }}</label>
                        <div class="SearchForm-control">
                            <div class="row">
                                <div class="col-lg-5">
                                    <select class="form-control SearchForm-select" id="searchForm_region">
                                        {% for reg in regions %}
                                            <option value="{{ reg|join('') }}">{{ reg|join('') }}</option>
                                        {% endfor %}
                                    </select>
                                </div>
                                <div class="col-lg-7">
                                    <select class="form-control SearchForm-select" id="searchForm_destination">
                                        <option value=",," selected="selected">{{ 'hotels.searchForm.allCities'|trans }}</option>
                                    </select>
                                    <span class="zoharicon-address" style="right: 1em;"></span>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-lg-2">
                    <div class="form-group">
                        <label for="" class="SearchForm-label">{{ 'hotels.searchForm.hotel'|trans }}</label>
                        <div class="SearchForm-control">
                            <select class="form-control SearchForm-select" id="searchForm_hotel">
                                <option value="-1" >{{ 'hotels.searchForm.allHotels'|trans }}</option>
                            </select>
                        </div>
                    </div>
                </div>
                <div class="col-lg-3">
                    <div class="row">
                        <div class="input-daterange" id="sandbox-container">
                            <div class="form-group col-md-6">
                                <label for="" class="SearchForm-label">{{ 'hotels.searchForm.checkIn'|trans }}</label>
                                <input type="text" class="form-control SearchForm-input" name="start"
                                       id="datepickerStart" placeholder="{{ 'hotels.searchForm.checkIn'|trans }}"/>
                            </div>
                            <div class="form-group col-md-6">
                                <label for="" class="SearchForm-label">{{ 'hotels.searchForm.checkOut'|trans }}</label>
                                <input type="text" class="form-control SearchForm-input" name="end" id="datepickerEnd"
                                       placeholder="{{ 'hotels.searchForm.checkOut'|trans }}"/>
                                <p class="SearchForm-nights" id="nights">
                                    {{ 'hotels.searchForm.selectPeriod'|trans }}
                                </p>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-lg-3">
                    <div class="row">
                        <div class="col-sm-8">
                            <div class="row">
                                <div class="col-lg-6">
                                    <div class="form-group">
                                        <label for=""
                                               class="SearchForm-label">{{ 'hotels.searchForm.adults'|trans }}</label>
                                        <div class="SearchForm-control">
                                            <select class="form-control SearchForm-select"
                                                    name="searchForm_room1_adults" id="searchForm_room1_adults">
                                                {% for k in 1..8 %}
                                                    <option value="{{ k }}">{{ k }}</option>
                                                {% endfor %}
                                            </select>
                                            <span class="zoharicon-adult fix-font"></span>
                                        </div>
                                    </div>
                                </div>

                                <div class="col-lg-6">
                                    <div class="form-group">
                                        <label for=""
                                               class="SearchForm-label">{{ 'hotels.searchForm.children'|trans }}</label>
                                        <div class="SearchForm-control">
                                            <select class="form-control SearchForm-select"
                                                    name="searchForm_room1_children" id="searchForm_room1_children">
                                                {% for k in 0..6 %}
                                                    <option value="{{ k }}">{{ k }}</option>
                                                {% endfor %}
                                            </select>
                                            <span class="zoharicon-child fix-font"></span>
                                        </div>
                                    </div>
                                </div>

                                <div class="col-lg-12" id="oneRoomChildrenAge">
                                    <div class="row">
                                        <div class="col-lg-12">
                                            <label for=""
                                                   class="SearchForm-label">{{ 'hotels.searchForm.childrenAge'|trans }}</label>
                                        </div>
                                        <div class="col-lg-4">
                                            <div class="form-group">
                                                <div class="SearchForm-control">
                                                    <select class="form-control SearchForm-select"
                                                            name="searchForm_room1_children1_age"
                                                            id="searchForm_room1_children1_age">
                                                        {% for k in 0..17 %}
                                                            <option value="{{ k }}">{{ k }}</option>
                                                        {% endfor %}
                                                    </select>
                                                </div>
                                            </div>
                                        </div>
                                        <div class="col-lg-4">
                                            <div class="form-group">
                                                <div class="SearchForm-control">
                                                    <select class="form-control SearchForm-select"
                                                            name="searchForm_room1_children2_age"
                                                            id="searchForm_room1_children2_age">
                                                        {% for k in 0..17 %}
                                                            <option value="{{ k }}">{{ k }}</option>
                                                        {% endfor %}
                                                    </select>
                                                </div>
                                            </div>
                                        </div>
                                        <div class="col-lg-4">
                                            <div class="form-group">
                                                <div class="SearchForm-control">
                                                    <select class="form-control SearchForm-select"
                                                            name="searchForm_room1_children3_age"
                                                            id="searchForm_room1_children3_age">
                                                        {% for k in 0..17 %}
                                                            <option value="{{ k }}">{{ k }}</option>
                                                        {% endfor %}
                                                    </select>
                                                </div>
                                            </div>
                                        </div>
                                        <div class="col-lg-4">
                                            <div class="form-group">
                                                <div class="SearchForm-control">
                                                    <select class="form-control SearchForm-select"
                                                            name="searchForm_room1_children4_age"
                                                            id="searchForm_room1_children4_age">
                                                        {% for k in 0..17 %}
                                                            <option value="{{ k }}">{{ k }}</option>
                                                        {% endfor %}
                                                    </select>
                                                </div>
                                            </div>
                                        </div>
                                        <div class="col-lg-4">
                                            <div class="form-group">
                                                <div class="SearchForm-control">
                                                    <select class="form-control SearchForm-select"
                                                            name="searchForm_room1_children5_age"
                                                            id="searchForm_room1_children5_age">
                                                        {% for k in 0..17 %}
                                                            <option value="{{ k }}">{{ k }}</option>
                                                        {% endfor %}
                                                    </select>
                                                </div>
                                            </div>
                                        </div>
                                        <div class="col-lg-4">
                                            <div class="form-group">
                                                <div class="SearchForm-control">
                                                    <select class="form-control SearchForm-select"
                                                            name="searchForm_room1_children6_age"
                                                            id="searchForm_room1_children6_age">
                                                        {% for k in 0..17 %}
                                                            <option value="{{ k }}">{{ k }}</option>
                                                        {% endfor %}
                                                    </select>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <div class="col-lg-4">
                            <button type="submit"
                                    class="btn btn-primary btn-block SearchForm-submit">{{ 'hotels.searchForm.search'|trans }}</button>
                        </div>
                    </div>
                </div>
            </div>

            {{ form_end(searchForm) }}
        </section>
        <hr/>
    </div>
</div>